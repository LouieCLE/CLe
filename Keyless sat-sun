-- LocalScript (place in StarterGui or StarterPlayerScripts)

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "CLE_Launcher"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Parent = playerGui

-- Main Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 350, 0, 250)
frame.Position = UDim2.new(0.5, -175, 0.5, -125)
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.Parent = screenGui

local frameCorner = Instance.new("UICorner")
frameCorner.CornerRadius = UDim.new(0, 15)
frameCorner.Parent = frame

-- Draggable
local dragToggle, dragInput, dragStart, startPos

frame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragToggle = true
		dragStart = input.Position
		startPos = frame.Position

		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragToggle = false
			end
		end)
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if dragToggle and input.UserInputType == Enum.UserInputType.MouseMovement then
		local delta = input.Position - dragStart
		frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)

-- Slow Shake Animation
coroutine.wrap(function()
	while true do
		local shakeTween = TweenService:Create(frame, TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {Position = frame.Position + UDim2.new(0, 2, 0, -2)})
		shakeTween:Play()
		shakeTween.Completed:Wait()

		local shakeTweenBack = TweenService:Create(frame, TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {Position = frame.Position - UDim2.new(0, 2, 0, -2)})
		shakeTweenBack:Play()
		shakeTweenBack.Completed:Wait()
	end
end)()

-- Animated Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -20, 0, 40)
title.Position = UDim2.new(0, 10, 0, 0)
title.BackgroundTransparency = 1
title.Text = ""
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = frame

local function typewriter(label, text)
	for i = 1, #text do
		label.Text = string.sub(text, 1, i)
		wait(0.05)
	end
end

local function untypewriter(label)
	for i = #label.Text, 1, -1 do
		label.Text = string.sub(label.Text, 1, i - 1)
		wait(0.03)
	end
end

coroutine.wrap(function()
	while true do
		typewriter(title, "Happy keyless day!")
		wait(4)
		untypewriter(title)
		wait(0.5)
		typewriter(title, "from the creator of CLE @mrlnation/louie")
		wait(4)
		untypewriter(title)
		wait(0.5)
	end
end)()

-- Close Button
local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0, 30, 0, 30)
closeBtn.Position = UDim2.new(1, -40, 0, 5)
closeBtn.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
closeBtn.Text = "X"
closeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 18
closeBtn.Parent = frame

local closeCorner = Instance.new("UICorner")
closeCorner.CornerRadius = UDim.new(1, 0)
closeCorner.Parent = closeBtn

closeBtn.MouseButton1Click:Connect(function()
	screenGui:Destroy()
end)

-- Launch CLE Button
local cleButton = Instance.new("TextButton")
cleButton.Size = UDim2.new(0, 200, 0, 50)
cleButton.Position = UDim2.new(0.5, -100, 0.5, -30)
cleButton.AnchorPoint = Vector2.new(0.5, 0.5)
cleButton.BackgroundColor3 = Color3.fromRGB(40, 120, 40)
cleButton.Text = "Launch CLE"
cleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
cleButton.Font = Enum.Font.GothamBold
cleButton.TextSize = 20
cleButton.Parent = frame

local cleCorner = Instance.new("UICorner")
cleCorner.CornerRadius = UDim.new(0, 12)
cleCorner.Parent = cleButton

-- Launch CFE Button
local cfeButton = Instance.new("TextButton")
cfeButton.Size = UDim2.new(0, 200, 0, 50)
cfeButton.Position = UDim2.new(0.5, -100, 0.5, 40)
cfeButton.AnchorPoint = Vector2.new(0.5, 0.5)
cfeButton.BackgroundColor3 = Color3.fromRGB(120, 40, 40)
cfeButton.Text = "Launch CFE"
cfeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
cfeButton.Font = Enum.Font.GothamBold
cfeButton.TextSize = 20
cfeButton.Parent = frame

local cfeCorner = Instance.new("UICorner")
cfeCorner.CornerRadius = UDim.new(0, 12)
cfeCorner.Parent = cfeButton

-- Typewriter Message for CFE
local function typeCFEMessage()
	local msgLabel = Instance.new("TextLabel")
	msgLabel.Size = UDim2.new(1, 0, 1, 0)
	msgLabel.Position = UDim2.new(0, 0, 0, 0)
	msgLabel.BackgroundTransparency = 1
	msgLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
	msgLabel.Font = Enum.Font.Gotham
	msgLabel.TextSize = 22
	msgLabel.TextWrapped = true
	msgLabel.Text = ""
	msgLabel.Parent = frame

	local text = "Coming soon..."
	for i = 1, #text do
		msgLabel.Text = string.sub(text, 1, i)
		wait(0.05)
	end
	wait(2)
	screenGui:Destroy()
end

-- Button Events
cleButton.MouseButton1Click:Connect(function()
	screenGui:Destroy()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/LouieCLE/CLe/refs/heads/main/CLE%20v1.1"))()
end)

cfeButton.MouseButton1Click:Connect(function()
	cleButton.Visible = false
	cfeButton.Visible = false
	typeCFEMessage()
end)
