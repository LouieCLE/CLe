local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

-- Create orb
local orb = Instance.new("Part")
orb.Name = "CL_Orb"
orb.Shape = Enum.PartType.Ball
orb.Size = Vector3.new(0.8, 0.8, 0.8)
orb.Material = Enum.Material.Neon
orb.Color = Color3.fromRGB(10, 10, 10)
orb.Anchored = true
orb.CanCollide = false
orb.Parent = workspace

-- Fire particle
local fire = Instance.new("Fire")
fire.Size = 2
fire.Heat = 5
fire.Parent = orb

-- Billboard GUI
local billboard = Instance.new("BillboardGui")
billboard.Size = UDim2.new(0, 200, 0, 50)
billboard.StudsOffset = Vector3.new(0, 1.5, 0)
billboard.AlwaysOnTop = true
billboard.Parent = orb

local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, 0, 1, 0)
label.BackgroundTransparency = 1
label.TextColor3 = Color3.new(1, 1, 1)
label.TextStrokeTransparency = 0
label.Text = ""
label.TextWrapped = true
label.Font = Enum.Font.FredokaOne
label.TextSize = 14
label.Parent = billboard

-- Orbital movement
local orbitRadius = 2
local orbitHeight = 2.5
local orbitSpeed = math.pi
local angle = 0

RunService.RenderStepped:Connect(function(dt)
	if hrp and orb then
		angle = angle + orbitSpeed * dt
		local x = math.cos(angle) * orbitRadius
		local z = math.sin(angle) * orbitRadius
		local orbitPos = hrp.Position + Vector3.new(x, orbitHeight, z)
		orb.CFrame = CFrame.new(orbitPos) * CFrame.Angles(0, angle, 0)
	end
end)

-- Type and untype functions
local function typeMessage(text, delayPerChar)
	label.Text = ""
	for i = 1, #text do
		label.Text = text:sub(1, i)
		task.wait(delayPerChar)
	end
end

local function untypeMessage(delayPerChar)
	for i = #label.Text, 1, -1 do
		label.Text = label.Text:sub(1, i - 1)
		task.wait(delayPerChar)
	end
end

-- Dialogue list
local randomDialogues = {
	"hmmmm interesting...",
	"huhuhuhu＼(^-^)／",
	"I'm getting bored here execute anything!",
	"My creator is mrlnation or louie",
	"nice avatar!",
	"Blah blah bleh bleh....",
	"damn I wish there no skids on this game..."
}

-- Main sequence
task.spawn(function()
	typeMessage("Hello, I'm CL!", 0.05)
	task.wait(3)
	untypeMessage(0.03)
	task.wait(0.5)
	typeMessage("CLE...", 0.1)
	task.wait(5)
	untypeMessage(0.04)

	while true do
		task.wait(30)
		local msg = randomDialogues[math.random(1, #randomDialogues)]
		typeMessage(msg, 0.05)
		task.wait(4)
		untypeMessage(0.03)
	end
end)
